<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ece251.gongxl.transcanner.ScanResult"
    android:orientation="vertical">

    <EditText android:id="@+id/scan_result"

        android:layout_centerHorizontal="true"

        android:textSize="24dip"

        android:layout_height="400dip"

        android:gravity="left"

        android:textColor="#000000"

        android:background="@drawable/setbar_bg"

        android:layout_marginTop="5dip"

        android:layout_width="300dip"

        android:layout_gravity="center_horizontal">

    </EditText>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">
    <ImageButton
        android:id="@+id/backtoscan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:src="@drawable/scan2"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:src="@drawable/trans2"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:src="@drawable/time2"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:src="@drawable/location"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:src="@drawable/share4"
        android:background="@android:color/transparent"/>

    </LinearLayout>


</LinearLayout>
